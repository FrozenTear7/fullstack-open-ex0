{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "singleQuote": true,
        "semi": false
      }
    ],
    "no-console": 0,
    "no-underscore-dangle": "off",
    "no-param-reassign": "off",
    "import/first": "off",
    "react/prop-types": "off",
    "react/jsx-one-expression-per-line": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "import/extensions": "off",
    "import/prefer-default-export": "off",
    "consistent-return": "off",
    "no-shadow": "off",
    "no-alert": "off",
    "func-names": "off"
  },
  "globals": {
    "window": true,
    "document": true
  }
}
